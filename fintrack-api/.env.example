# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password
DB_NAME=fintrack_db
DB_SSLMODE=disable

# Server Configuration
PORT=8080
GIN_MODE=debug

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRY_HOURS=24

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# External API Keys (for stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# Redis Configuration (optional, for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug

# OpenAI LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_MAX_CONTEXT_ROUNDS=3
OPENAI_TIMEOUT=60

# Postgres Handler Configuration (for token usage tracking)
POSTGRES_HANDLER_URL=http://localhost:8080
POSTGRES_HANDLER_TOKEN=your_postgres_handler_api_token
POSTGRES_HANDLER_TIMEOUT=10